{
  "name": "whatsapp_clone",
  "version": "1.0.0",
  "description": "WhatsApp Web Clone with real-time chat interface",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "process-webhooks": "node scripts/processWebhooks.js",
    "test-webhook": "curl -X POST http://localhost:3000/webhook -H \"Content-Type: application/json\" -d @sample_payloads/sample_message.json",
    "deploy:vercel": "vercel --prod",
    "deploy:render": "echo 'Deploy to Render: Connect your GitHub repo and set build command: npm install, start command: npm start'",
    "deploy:heroku": "echo 'Deploy to Heroku: heroku create && git push heroku main'"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongodb": "^6.3.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "whatsapp",
    "clone",
    "chat",
    "real-time"
  ],
  "author": "Your Name",
  "license": "MIT"
}
